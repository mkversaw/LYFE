<%- include("partials/header"); -%>

<style>

    
    .login-form {
        width: 340px;
        margin: 50px auto;
        font-size: 15px;
    }
    .login-form form {
        margin-bottom: 15px;
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    .login-form h2 {
        margin: 0 0 15px;
    }
    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }
    .btn {        
        font-size: 15px;
        font-weight: bold;
        background-color: rgba(0, 0, 0, 0);
        background-image: linear-gradient(225deg, rgb(93, 228, 85) 2.32%, rgb(20, 192, 170) 100%);
        color: #fff;
        text-align: center;
        padding: 15px 30px;
        box-shadow: 0px 26px 120px rgba(0, 0, 0, 0.1), 0px 16px 15px rgba(0, 0, 0, 0.1);

        border-radius: 100px;
        border-top-left-radius: 100px;
        border-top-right-radius: 100px;
        border-bottom-right-radius: 100px;
        border-bottom-left-radius: 100px;

        transition: opacity .4s;
        transition-property: opacity;
        transition-duration: 0.4s;
        transition-timing-function: ease;
        transition-delay: 0s;
    }

    .btn:hover {
        opacity: 0.8;
        color: #fff;
    }

    .btn:focus {
        outline: 0;
        outline-color: currentcolor;
        outline-style: none;
        outline-width: 0px;
    }

    body {
        background-color: #EDF5E1;
    }

    footer {
        background-color: #02353C;
    }

    object {
        filter: drop-shadow(3px 5px 2px rgb(0 0 0 / 0.4));
    }


    

</style>

<body class="d-flex flex-column min-vh-100">

    <header class="bg-gradient text-white pt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="d-flex justify-content-center">
                    <object type="image/svg+xml" height="50%" data="images/lyfevect.svg"></object>
                </div>  
            </div>        
        </div>
    </header>

    <div class="login-form">

        <form action="/register" method="post">
            <h2 class="text-center">Register</h2>
            
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Email Address" name="email" required="required">
            </div>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" name="username" required="required">
            </div>

            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="pass1" required="required">
            </div>

            <div class="form-group">
                <input type="password" class="form-control" placeholder="Repeat password" name="pass2" required="required">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-block">Create Account</button>
            </div>

            <p class="text-center"><a href="/login">Already have an account? Login here!</a></p>

        </form>
        
    </div>

    <footer class="text-white-50 text-center mt-5 p-3 mt-auto">
